<resources>

    <style name="Base.AppTheme.Light" parent="Theme.Material3.DynamicColors.Light.Rikka">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimaryVariant">@color/primary_dark_light_light_status_bar</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:textAppearanceListItem">?textAppearanceSubtitle1</item>
        <item name="android:colorAccent">?colorPrimary</item>
        <item name="android:colorControlActivated">?colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="toolbarStyle">@style/ModernToolbarStyle</item>
        <item name="android:fontFamily">@font/outfit</item>
        <item name="fontFamily">@font/outfit</item>
    </style>

    <style name="Theme.Light" parent="Base.AppTheme.Light" />

    <style name="Base.AppTheme" parent="Theme.Material3.DynamicColors.Dark.Rikka">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearanceListItem">?textAppearanceSubtitle1</item>
        <item name="android:colorAccent">?colorPrimary</item>
        <item name="android:colorControlActivated">?colorPrimary</item>
        <item name="android:statusBarColor">?colorPrimaryContainer</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="toolbarStyle">@style/ModernToolbarStyle</item>
        <item name="android:fontFamily">@font/outfit</item>
        <item name="fontFamily">@font/outfit</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.Material3.ActionBar.Solid">
        <item name="background">?colorOnSecondary</item>
        <item name="contentInsetStart">5dp</item>
    </style>

    <style name="Theme" parent="Base.AppTheme" />

    <style name="DeviceInfoDialogLabel">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="DeviceInfoDialogValue">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
    </style>

    <style name="StatusCardStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="StatusCardTitle">
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StatusCardSummary">
        <item name="android:textAppearance">?textAppearanceBodyMedium</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:alpha">1.0</item>
    </style>

    <style name="ModernButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModernButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:minHeight">64dp</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemActiveIndicatorStyle">@style/NavActiveIndicator</item>
        <item name="itemTextAppearanceActive">@style/BottomNavActiveText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavInactiveText</item>
    </style>

    <style name="NavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="BottomNavActiveText" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/outfit</item>
    </style>

    <style name="BottomNavInactiveText" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/outfit</item>
    </style>

</resources>
