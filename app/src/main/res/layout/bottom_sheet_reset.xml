<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="32dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/badge_background" />

    <!-- Warning Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_round_warning_24"
        app:tint="?attr/colorError" />

    <!-- Title -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/reset_settings"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold" />

    <!-- Description -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:alpha="0.7"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="This will erase all your preferences and restore default settings. Both WhatsApp and WhatsApp Business will be restarted. This action cannot be undone."
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <!-- Confirm Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_reset_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="?attr/colorError"
        android:letterSpacing="0.02"
        android:text="Reset All Settings"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnError"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart"
        app:iconSize="18dp"
        app:iconTint="?attr/colorOnError" />

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_reset_btn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:letterSpacing="0.02"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp" />

</LinearLayout>
