<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:fragment="com.wmods.wppenhacer.ui.fragments.GeneralFragment$HomeGeneralPreference"
        app:iconSpaceReserved="false"
        app:title="@string/general" />

    <Preference
        app:fragment="com.wmods.wppenhacer.ui.fragments.GeneralFragment$HomeScreenGeneralPreference"
        app:iconSpaceReserved="false"
        app:title="@string/home_screen" />

    <Preference
        app:fragment="com.wmods.wppenhacer.ui.fragments.GeneralFragment$ConversationGeneralPreference"
        app:iconSpaceReserved="false"
        app:title="@string/conversation" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/status">

        <rikka.material.preference.MaterialSwitchPreference
            app:key="autonext_status"
            app:summary="@string/disable_auto_status_sum"
            app:title="@string/disable_auto_status" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="copystatus"
            app:summary="@string/enable_copy_status_sum"
            app:title="@string/enable_copy_status" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="toast_viewed_status"
            app:summary="@string/toast_on_viewed_status_sum"
            app:title="@string/toast_on_viewed_status" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/about">

        <rikka.material.preference.MaterialSwitchPreference
            app:key="custom_about_timestamp_enabled"
            app:summary="@string/custom_about_timestamp_enabled_sum"
            app:title="@string/custom_about_timestamp_enabled" />

        <EditTextPreference
            app:key="custom_about_timestamp_value"
            app:title="@string/custom_about_timestamp_value"
            app:summary="@string/custom_about_timestamp_value_sum"
            app:dependency="custom_about_timestamp_enabled" />

    </PreferenceCategory>


</PreferenceScreen>
